<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ElektronikActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elektronik"
        android:layout_gravity="center"

        android:textSize="30sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/elektronik"
        android:adjustViewBounds="true"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:text="Elektronik to osoba, która pracuje z układami i urządzeniami elektronicznymi. Ich praca może obejmować montaż elementów elektronicznych, montaż całych układów elektronicznych na płytkach drukowanych w urządzeniach, wykonywanie instalacji elektronicznej, instalowanie urządzeń, uruchamianie instalacji, recykling elementów instalacji, demontowanie instalacji, analiza działania elektronicznych urządzeń " />

</LinearLayout>